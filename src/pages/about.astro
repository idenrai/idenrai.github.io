---
import PageLayout from '../layouts/PageLayout.astro';

const skills = [
  { category: '언어', items: ['Python', 'JavaScript / TypeScript', 'Java', 'SQL'] },
  { category: '프론트엔드', items: ['React', 'Svelte', 'HTML / CSS'] },
  { category: '백엔드 / 배치', items: ['Node.js', 'REST API 설계', '배치 처리', '帳票 (JasperReport / iReport)'] },
  { category: '데이터', items: ['Databricks', 'AWS Glue', 'Athena', 'Redshift', 'PostgreSQL', 'Oracle', 'MSSQL'] },
  { category: '클라우드 / 인프라', items: ['AWS (Lambda, RDS, S3, EventBridge, Secrets Manager 등)', 'Azure (AI Search)', 'Docker', 'Linux'] },
  { category: 'AI', items: ['Generative AI PoC', 'Azure OpenAI / ChatGPT 연동', 'RAG 구현', 'Azure AI Search'] },
  { category: '프로세스', items: ['애자일 / 스크럼', 'Scrum Master', 'CI/CD', 'Playwright / Selenium (테스트 자동화)'] },
];

const career = [
  {
    period: '2022.03 — 현재',
    company: '딜로이트 토마츠 컨설팅 합동회사',
    role: 'Studio Lead (Data / AI Engineer)',
    desc: '데이터 플랫폼 팀 Data Engineer, Generative AI 팀 FE/BE Engineer, Scrum Master를 역임. Databricks를 활용한 데이터 기반 구축, 사내 ChatGPT / Generative AI PoC 개발 등 다양한 데이터·AI 프로젝트를 리드.',
    tags: ['Databricks', 'Python', 'Azure OpenAI', 'AWS', 'Generative AI', 'Terraform', 'Scrum Master'],
  },
  {
    period: '2018.03 — 2022.03',
    company: '액센추어 주식회사',
    role: 'Application Development Senior Analyst',
    desc: 'AI Powered Contact Center 프로젝트 개발·CI/CD 엔지니어, Chatbot 정확도 검증 툴 개발, 온라인 여행 예약 시스템 FE 개발. 고객사 신입사원 대상 Java 웹 개발 연수 강사(교재 제작·질의응답·채점) 담당.',
    tags: ['React', 'TypeScript', 'CI/CD', 'Chatbot', 'AI', 'DevOps'],
  },
  {
    period: '2015.04 — 2018.01',
    company: 'エス・ビー・エス株式会社',
    role: 'System Engineer',
    desc: '사내 그룹웨어·프레임워크 개발, 육상 운송 운용 시스템 개발 등에 참여. SE로서 상세설계·개발·테스트 전 프로세스를 경험. 배치 처리, 帳票(JasperReport/iReport) 등 폭넓은 기술 스택 습득.',
    tags: ['Java', 'JavaScript', 'jQuery', 'Oracle', 'MSSQL', 'iReport'],
  },
];

const certifications = [
  { name: 'Databricks Certified Machine Learning Professional', issuer: 'Databricks', period: '2025.07 — 2027.07' },
  { name: 'Databricks Certified Data Engineer Associate',       issuer: 'Databricks', period: '2025.01 — 2027.01' },
  { name: 'AWS Certified Data Engineer – Associate',            issuer: 'AWS',         period: '2024.12 — 2027.12' },
  { name: 'Google Cloud Digital Leader',                       issuer: 'Google',      period: '2024.12 — 2027.12' },
  { name: 'Registered Scrum Master™',                          issuer: 'Scrum Inc.', period: '2022.05 — 2028.05' },
  { name: '基本情報技術者',                                      issuer: 'IPA Japan',  period: '2016.05' },
  { name: '日本語能力試験 JLPT N1',                              issuer: 'JLEES',      period: '2013.01' },
  { name: '정보처리기사',                                        issuer: '한국산업인력공단', period: '2014.05' },
];
---

<PageLayout title="소개" description="도쿄에서 일하는 소프트웨어 엔지니어 권영재입니다.">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 py-12">

    <!-- Hero -->
    <div class="mb-16">
      <h1 class="text-4xl font-extrabold text-gray-900 dark:text-gray-50 mb-3">
        권영재 <span class="text-xl font-normal text-gray-400 dark:text-gray-500">Youngjae Kwon</span>
      </h1>
      <p class="text-accent-600 dark:text-accent-400 font-semibold mb-5">Software / Data / AI Engineer — Tokyo, Japan</p>
      <p class="text-gray-600 dark:text-gray-400 leading-relaxed max-w-2xl">
        한국에서 태어나 일본에서 커리어를 쌓아온 소프트웨어 엔지니어입니다.
        SIer에서 시작해 컨설팅 펌까지, 웹 시스템 개발·프론트엔드·데이터 엔지니어링·Generative AI까지 폭넓은 분야를 경험해 왔습니다.
        이 블로그는 일하면서 배우고 부딪힌 것들을 기록하는 공간입니다.
      </p>
    </div>

    <!-- 경력 -->
    <section class="mb-16">
      <h2 class="text-xl font-bold text-gray-900 dark:text-gray-100 mb-6 flex items-center gap-2">
        <span class="w-1 h-5 rounded-full bg-accent-500 inline-block"></span>
        경력
      </h2>
      <div class="space-y-8">
        {career.map((item, i) => (
          <div class="flex gap-5">
            <div class="flex flex-col items-center">
              <div class={`w-3 h-3 rounded-full mt-1 shrink-0 ${i === 0 ? 'bg-accent-500' : 'bg-gray-300 dark:bg-gray-600'}`} />
              {i < career.length - 1 && <div class="w-px flex-1 bg-gray-200 dark:bg-gray-700 mt-2" />}
            </div>
            <div class="pb-2">
              <p class="font-bold text-gray-900 dark:text-gray-100">{item.company}</p>
              <p class="text-sm text-accent-600 dark:text-accent-400 mb-2">{item.role}</p>
              <p class="text-sm text-gray-600 dark:text-gray-400 leading-relaxed mb-3">{item.desc}</p>
              <div class="flex flex-wrap gap-1.5">
                {item.tags.map(tag => (
                  <span class="px-2 py-0.5 rounded text-xs bg-gray-100 dark:bg-gray-800 text-gray-600 dark:text-gray-400">
                    {tag}
                  </span>
                ))}
              </div>
            </div>
          </div>
        ))}
      </div>
    </section>

    <!-- 기술 스택 -->
    <section class="mb-16">
      <h2 class="text-xl font-bold text-gray-900 dark:text-gray-100 mb-6 flex items-center gap-2">
        <span class="w-1 h-5 rounded-full bg-accent-500 inline-block"></span>
        기술 스택
      </h2>
      <div class="grid sm:grid-cols-2 gap-4">
        {skills.map(({ category, items }) => (
          <div class="rounded-xl border border-gray-100 dark:border-gray-800 bg-white dark:bg-gray-900 p-4">
            <p class="text-xs font-semibold text-accent-600 dark:text-accent-400 uppercase tracking-wider mb-3">{category}</p>
            <div class="flex flex-wrap gap-1.5">
              {items.map(item => (
                <span class="px-2.5 py-1 rounded-md text-xs bg-gray-100 dark:bg-gray-800 text-gray-700 dark:text-gray-300">
                  {item}
                </span>
              ))}
            </div>
          </div>
        ))}
      </div>
    </section>

    <!-- 자격증 -->
    <section class="mb-16">
      <h2 class="text-xl font-bold text-gray-900 dark:text-gray-100 mb-6 flex items-center gap-2">
        <span class="w-1 h-5 rounded-full bg-accent-500 inline-block"></span>
        자격증 / 수료증
      </h2>
      <div class="grid sm:grid-cols-2 gap-3">
        {certifications.map(({ name, issuer, period }) => (
          <div class="flex items-start gap-3 rounded-xl border border-gray-100 dark:border-gray-800 bg-white dark:bg-gray-900 p-4">
            <div class="mt-0.5 w-2 h-2 rounded-full bg-accent-500 shrink-0"></div>
            <div>
              <p class="text-sm font-semibold text-gray-800 dark:text-gray-200">{name}</p>
              <p class="text-xs text-gray-500 dark:text-gray-400 mt-0.5">{issuer} · {period}</p>
            </div>
          </div>
        ))}
      </div>
    </section>

    <!-- 링크 -->
    <section class="mb-16">
      <h2 class="text-xl font-bold text-gray-900 dark:text-gray-100 mb-4 flex items-center gap-2">
        <span class="w-1 h-5 rounded-full bg-accent-500 inline-block"></span>
        링크
      </h2>
      <div class="flex flex-wrap gap-3">
        <a
          href="https://github.com/idenrai"
          target="_blank"
          rel="noopener noreferrer"
          class="btn-secondary"
        >
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 2C6.477 2 2 6.477 2 12c0 4.418 2.865 8.166 6.839 9.489.5.092.682-.217.682-.482 0-.237-.009-.868-.013-1.703-2.782.604-3.369-1.34-3.369-1.34-.454-1.155-1.11-1.463-1.11-1.463-.908-.62.069-.607.069-.607 1.003.07 1.531 1.03 1.531 1.03.892 1.529 2.341 1.087 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.11-4.555-4.943 0-1.091.39-1.984 1.029-2.683-.103-.253-.446-1.27.098-2.647 0 0 .84-.268 2.75 1.026A9.578 9.578 0 0112 6.836c.85.004 1.705.114 2.504.337 1.909-1.294 2.747-1.026 2.747-1.026.546 1.377.202 2.394.1 2.647.64.699 1.028 1.592 1.028 2.683 0 3.841-2.337 4.687-4.565 4.935.359.309.678.919.678 1.852 0 1.336-.012 2.415-.012 2.742 0 .267.18.578.688.48C19.138 20.163 22 16.418 22 12c0-5.523-4.477-10-10-10z"/>
          </svg>
          GitHub
        </a>
        <a
          href="https://idenrai.tistory.com"
          target="_blank"
          rel="noopener noreferrer"
          class="btn-secondary"
        >
          <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1" />
          </svg>
          Tistory
        </a>
        <a
          href="https://qiita.com/idenrai"
          target="_blank"
          rel="noopener noreferrer"
          class="btn-secondary"
        >
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
            <circle cx="12" cy="12" r="10" fill="none" stroke="currentColor" stroke-width="2"/>
            <path d="M12 7v5l3 3" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
          </svg>
          Qiita
        </a>
        <a
          href="https://www.linkedin.com/in/idenrai/"
          target="_blank"
          rel="noopener noreferrer"
          class="btn-secondary"
        >
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
            <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433a2.062 2.062 0 01-2.063-2.065 2.064 2.064 0 112.063 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
          </svg>
          LinkedIn
        </a>
      </div>
    </section>

    <!-- 이 블로그에 대해 -->
    <section>
      <h2 class="text-xl font-bold text-gray-900 dark:text-gray-100 mb-4 flex items-center gap-2">
        <span class="w-1 h-5 rounded-full bg-accent-500 inline-block"></span>
        이 블로그에 대해
      </h2>
      <p class="text-gray-600 dark:text-gray-400 leading-relaxed">
        <a href="https://astro.build" target="_blank" rel="noopener noreferrer" class="text-accent-600 dark:text-accent-400 hover:underline">Astro</a> +
        Tailwind CSS로 구축하고 GitHub Actions로 자동 배포합니다.
        포스트는 <a href="https://idenrai.tistory.com" target="_blank" rel="noopener noreferrer" class="text-accent-600 dark:text-accent-400 hover:underline">Tistory 원본 블로그</a>와 동기화됩니다.
      </p>
    </section>

  </div>
</PageLayout>
